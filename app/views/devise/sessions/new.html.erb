<div class="container">
  <div class="row vh-100">
    <div
      class="
        bg-white
        p-3
        rounded
        row
        w-75
        mx-auto
        justify-content-between
        my-auto
      "
    >
      <div class="col-6">
        <h2 class="mb-3 bajra-text-primary letter-space-2">LLMS</h2>

        <div class="my-4">
          <h2>Login to you account</h2>
          <p class="text-muted">Welcome back! Please login to your account.</p>
        </div>

        <div class="form my-3">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label "Email address", class: "form-label" %><br/>
              <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "form-control" %>

            </div>

            <div class="form-group my-4">
              <%= f.label :password, class: "form-label" %><br/>
              <%= f.password_field :password,
                               autocomplete: "current-password",
                               class: "form-control" %>
              <div class="mt-2 mb-4">
                <span class="text-danger text-start"><%= alert %></span>
                <%= link_to "Forgot password?",
                new_user_password_path,
                class: "bajra-text-primary float-end" %>
              </div>
            </div>

            <div class="my-4">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: "ms-2" %>
                </div>
              <% end %>
            </div>

            <div class="actions d-grid my-2">
              <%= f.submit "Log in", class: "btn btn-danger" %>
            </div>

            <div class="text-center my-2">
              <p>Not registered yet?
                <%= link_to "Create new account",
                new_user_registration_path,
                class: "bajra-text-primary" %>
              </p>
            </div>
          <% end %>
        </div>

      </div>
      <div class="col-4 text-center row">
        <%= image_tag "authentication/login-poster.png",
        class: "col-12 align-self-center img-fluid" %>
      </div>
    </div>
  </div>
</div>
