<%= form_with model: @type do |form| %>
  <div>
    <% if type.errors.any? %>
      <div class="error-message text-danger">
        <%= type.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>
  </div>
  <div class="row row align-items-end border p-5">
    <div class="col">
      <%= form.label :name, :class => "form-label"%>
      <%= form.text_field :name, :autofocus => true, :class => "form-control" %>
    </div>
    <div class="col-3 d-flex justify-content-around">
      <%= button_to "Create", type: "submit",  class: "btn btn-success" do %>
        Create
      <% end %>
      <%= link_to " Cancel", types_path, class: "btn btn-warning" %>
    </div>
  </div>
<% end %>
