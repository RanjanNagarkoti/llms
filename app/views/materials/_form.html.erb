<section class="bg-white p-3 mt-3 rounded">
  <%= form_with model: [@event, @material], class: 'd-flex align-items-center' do |form| %>
    <div class="form-group w-100">
      <%= form.file_field :files, class: 'form-control', multiple: true%>
    </div>
    <div class="form-group ms-2">
      <%= form.submit "Done", class: 'btn btn-sm btn-primary' %>
    </div>
  <% end %>
</section>
