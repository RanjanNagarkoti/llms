<div class="bg-white p-3 my-3 rounded">
  <%= form_with model: [@event, @participant] do |form| %>
    <div class="form-group d-flex align-items-end">
      <div class="w-100">
        <%= form.label "Presenter", class: 'form-label' %>
        <%= form.collection_select :user_id, User.all.where(role: 'presenter'), :id, :first_name, {}, { class: 'form-select' } %>
        <% @participant.errors.full_messages_for(:user_id).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>
      <div>
        <%= form.submit "Submit",class: 'ms-2 btn btn-sm btn-primary mb-1' %>
      </div>
    </div>
  <% end %>
</div>
